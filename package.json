{
  "name": "config-vault",
  "workspaces": [
    "client",
    "server",
    "shared"
  ],
  "scripts": {
    "dev": "npm-run-all --parallel build:shared dev:client dev:server",
    "dev:client": "npm run dev --workspace=client",
    "dev:server": "npm run dev --workspace=server",
    "dev:shared": "npm run dev --workspace=shared",
    "build": "npm run build --workspace=shared && npm run build --workspace=server && npm run build --workspace=client",
    "build:client": "npm run build --workspace=client",
    "build:server": "npm run build --workspace=server",
    "build:shared": "npm run build --workspace=shared",
    "start": "npm run start --workspace=server",
    "start:client": "npm run preview --workspace=client",
    "start:server": "npm run start --workspace=server"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "npm-run-all": "^4.1.5",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.5",
    "typescript": "^5.0.0"
  }
}
